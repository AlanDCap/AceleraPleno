@model LivroModel


<h1>Cadastro de livro</h1>

<form method="post" asp-controller="Livro" asp-action="Index">

    <div class="mb-3">
        <label for="LIVRO" class="form-label">Nome</label>
        <input type="text" class="form-control" id="LIVRO" asp-for="LIVRO">
        
        <label for="PG" class="form-label">Páginas</label>
        <input type="text" class="form-control" id="PG" asp-for="PG">
        
        <label for="COD" class="form-label">Código</label>
        <input type="text" class="form-control" id="COD" asp-for="COD">

        <label for="VALOR" class="form-label">Valor</label>
        <input type="number" class="form-control" id="VALOR" asp-for="VALOR">
    </div>
    <div align="right"><button type="submit" class="btn btn-success">Salvar</button></div>

</form>